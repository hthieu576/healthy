%main.col-md-12.ml-sm-auto.col-lg-12.pt-3.px-4.text-center{:role => "main"}
  = image_tag('image-background.png', width: 250) 
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f|
  = render "users/shared/error_messages", resource: resource
  .form-group
    = f.label :first_name
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control', required: true
  .form-group
    = f.label :last_name
    = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', required: true
  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true
  .form-group
    = f.label :address
    = f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control', required: true
  .form-group
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true
  .form-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true
  .actions
    = f.submit "Sign up", class: 'btn btn-primary'
  = render "users/shared/links"
